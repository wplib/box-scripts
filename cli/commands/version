#!/usr/bin/env bash
#
# Example
#
#       box version
#
declare="${BOX_BASE_DIR:=}"
declare="${BOX_FUNCTIONS_FILE:=}"

source "${BOX_FUNCTIONS_FILE}"

case $1 in
	'-s'|'--short')
		cat "${BOX_BASE_DIR}/version"
		;;

	*)
		echo "GearBox: You are running version $(cat "${BOX_BASE_DIR}/version")"
		;;
esac

